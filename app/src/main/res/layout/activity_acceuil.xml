<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exemple.tipso.Acceuil"
    android:background="#339DC6">

    <FrameLayout
        android:layout_width="390dp"
        android:layout_height="55dp"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_acceuil"
            android:id="@+id/title_home"
            android:layout_gravity="center"
            android:gravity="center_vertical|center|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/imgMenu"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/menu_icon"
            android:padding="5dp"
            android:contentDescription="List of categorie" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgAdd"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/add"
            android:padding="4dp"
            android:contentDescription="@string/add_tips" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/frameLayout"
        android:weightSum="1">

        <TabHost
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tabHost"
            android:layout_weight="0.86">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="384dp"
                    android:layout_height="57dp"
                    android:tabStripEnabled="true"
                    android:baselineAligned="false"
                    android:clickable="true"
                    android:background="@android:color/white"/>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.62">

                    <LinearLayout
                        android:id="@+id/home"
                        android:layout_width="384dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <FrameLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <GridView
                                android:id="@+id/gridview"
                                android:layout_width="386dp"
                                android:layout_height="412dp"
                                android:verticalSpacing="0dp"
                                android:horizontalSpacing="0dp"
                                android:stretchMode="columnWidth"
                                android:numColumns="auto_fit"
                                android:choiceMode="singleChoice"
                                android:fastScrollAlwaysVisible="true"
                                android:fastScrollEnabled="true"
                                android:nestedScrollingEnabled="true"
                                android:scrollingCache="false"
                                android:smoothScrollbar="false"
                                android:stackFromBottom="false"
                                android:background="#ffcad5ff" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/settings"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"></LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </TabHost>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="53dp">

            <ImageView
                android:layout_width="59dp"
                android:layout_height="47dp"
                android:id="@+id/imgSearch"
                android:src="@android:drawable/ic_menu_search"
                android:background="#b9eeeeee"
                android:contentDescription="@string/search_icon" />

            <EditText
                android:layout_width="326dp"
                android:layout_height="47dp"
                android:id="@+id/txtSearch"
                android:background="#cdfffafc"
                android:textColor="@android:color/black"
                android:hint="@string/text_search"
                android:gravity="center_vertical|center|center_horizontal"
                android:textStyle="bold"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
